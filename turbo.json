{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.local", "**/.env"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".svelte-kit/**", "build/**"]
		},
		"clean": {
			"cache": false
		},
		"check": {},
		"deploy:dev": {
			"dependsOn": ["build"],
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"logs:prev": {
			"cache": false,
			"persistent": true
		},
		"logs:prod": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["check"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"test:coverage": {
			"cache": false
		},
		"test:ui": {
			"cache": false
		},
		"test:watch": {
			"cache": false
		},
		"update-types": {
			"outputs": ["src/lib/types/supabase.ts"]
		}
	}
}
