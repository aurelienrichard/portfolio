{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build", "check"],
			"outputs": [".svelte-kit/**", "build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["lint"]
		},
		"test:watch": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["check"]
		},
		"check": {},
		"clean": {
			"cache": false
		}
	}
}
