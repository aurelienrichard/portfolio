{
	"name": "privelte",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "vite build",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"clean": "rm -rf .svelte-kit && rm -rf .turbo && rm -rf coverage && rm -rf .wrangler",
		"dev": "vite dev",
		"lint": "prettier . --check . && eslint . --report-unused-disable-directives",
		"deploy": "wrangler pages deploy ./.svelte-kit/cloudflare --project-name privelte",
		"logs": "wrangler pages deployment tail --project-name privelte --environment preview",
		"logs:prod": "wrangler pages deployment tail --project-name privelte --environment production",
		"preview": "vite preview",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"test": "vitest run",
		"update-types": "supabase gen types typescript --project-id yipoupsiomqlwjtapqda --schema public > src/lib/types/supabase.ts"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/tailwind-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@skeletonlabs/skeleton": "^2.9.1",
		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@sveltejs/adapter-cloudflare": "^4.4.0",
		"@sveltejs/kit": "^2.5.6",
		"@sveltejs/vite-plugin-svelte": "^3.1.0",
		"@tailwindcss/forms": "^0.5.7",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/svelte": "^4.1.0",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^20.12.7",
		"@vitest/coverage-v8": "^1.5.0",
		"@vitest/ui": "^1.5.0",
		"autoprefixer": "^10.4.19",
		"happy-dom": "^13.10.1",
		"postcss": "^8.4.38",
		"supabase": "^1.159.1",
		"svelte": "^4.2.14",
		"svelte-check": "^3.6.9",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.8",
		"vite-plugin-tailwind-purgecss": "^0.2.1",
		"vitest": "^1.5.0",
		"wrangler": "^3.50.0"
	},
	"type": "module",
	"dependencies": {
		"@supabase/supabase-js": "^2.42.4",
		"nanoid": "^5.0.7",
		"openpgp": "^5.11.1",
		"unique-names-generator": "^4.7.1",
		"zod": "^3.22.4"
	}
}
