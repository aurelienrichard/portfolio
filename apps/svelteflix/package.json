{
	"name": "svelteflix",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "vite build",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"clean": "rm -rf .turbo && rm -rf build",
		"dev": "vite dev",
		"lint": "prettier . --check . && eslint . --report-unused-disable-directives",
		"preview": "vite preview",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"test:watch": "npm run test:integration && npm run test:unit",
		"test": "npm run test:integration && npm run test:unit -- run"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@testing-library/svelte": "^4.0.3",
		"autoprefixer": "^10.4.15",
		"eslint-config-custom": "workspace:*",
		"happy-dom": "^10.11.2",
		"postcss": "^8.4.28",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwind-config": "workspace:*",
		"tsconfig": "workspace:*",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"zod": "^3.22.2"
	}
}
