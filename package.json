		"tailwindcss": "^3.3.3",
		"turbo": "latest"
	},
	"packageManager": "pnpm@8.6.10",
	"name": "portfolio",
	"lint-staged": {
		"apps/**/*.{js,ts,svelte}": [
			"prettier --write",
